<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chats</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        body {
            background-color: #f8f9fa;
        }
        .chat-card {
            max-width: 400px;
            margin: 20px auto;
            padding: 15px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            background-color: white;
            transition: transform 0.2s;
        }
        .chat-card:hover {
            transform: scale(1.05);
        }
        .msg {
            font-style: italic;
            color: #555;
        }
        .date {
            font-size: 0.9rem;
            color: gray;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="text-center mt-4">All Chats</h1>
        <div class="row">
            <% for (let obj of data) { %>
                <div class="col-md-4">
                    <div class="chat-card p-3">
                        <h5><strong>From:</strong> <%= obj.from %></h5>
                        <h5><strong>To:</strong> <%= obj.to %></h5>
                        <p class="msg">"<%= obj.msg %>"</p>
                        <p class="date"><%= obj.date.toDateString() %></p>
                        <button class="btn btn-warning btn-sm">Edit</button>
                        <button class="btn btn-danger btn-sm">Delete</button>
                    </div>
                </div>
            <% } %>
            <div id="add" class="col-md-4 chat-card p-3">
                <h1>Add</h1>
            </div>
        </div>
    </div>
</body>
</html>
